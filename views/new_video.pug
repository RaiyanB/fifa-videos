extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        h2.text-center.mb-4 Share a New Video

        if error
          .alert.alert-danger= error

        form(action="/video/new_video" method="POST")
          .mb-3
            label.form-label(for="title") Video Title
            input#title.form-control(type="text" name="title" required)

          .mb-3
            label.form-label(for="url") YouTube URL
            input#url.form-control(type="url" name="url" required)

          button.btn.btn-success.w-100(type="submit") Share Video

        p.text-center.mt-4
          a.btn.btn-outline-secondary(href="/video/dashboard/all") ‚Üê Back to Dashboard
